<% layout('layouts/boilerplate.ejs') %>

<h1>All Posts</h1>
<div>
    <a href="/posts/new">New Post</a>
</div>

<!-- style="width: 18rem;" -->

<% posts.forEach(post => { %>
    <div class="card mb-3" >
        <div class="row">
            <div class="col-md-4">
                <img src="<%= post.image %> " class="card-img-top" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= post.title %> </h5>
                    <p class="card-text"><%= post.content %> </p>
                    <a href="/posts/<%= post.id %> " class="btn btn-primary">View Post</a>
                  </div>
            </div>
        </div>
        
      </div>
<% }) %>

<ul>
    <% posts.forEach(post=> { %>
        <li><a href="/posts/<%=post._id%>">
                <%= post.title %>
            </a></li>
        <% }) %>
</ul>